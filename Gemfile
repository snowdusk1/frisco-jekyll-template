source 'https://rubygems.org'

# Set the core Jekyll version to the latest stable release (4.4.1).
# The '~> 4.4' operator allows any 4.4.x version, but prevents 5.x.
gem 'jekyll', '~> 4.4'

group :jekyll_plugins do
  # These are official Jekyll plugins that have been updated for Jekyll 4.x.
  # Removing the old version constraints lets Bundler fetch the latest compatible versions.
  gem 'jekyll-archives'
  gem 'jekyll-feed'

  # jekyll-paginate is obsolete in Jekyll 4.x!
  # It has been replaced by the more powerful and maintained jekyll-paginate-v2.
  gem 'jekyll-paginate'

  gem 'jekyll-seo-tag'
  gem 'jekyll-sitemap'
end
